<div class="container mt-4">
  <h3>Start New Game!!!</h3>
  <%= form_with(model: @game, local: true) do |form| %>
    <% if @game.errors.any? %>
      <div id="error_explanation">
        <h4>Errors:</h4>
        <ul>
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :player_1, class: 'form-label' %>
      <%= form.text_field :player_1, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :player_2, class: 'form-label' %>
      <%= form.text_field :player_2, class: 'form-control' %>
    </div>
    <%= form.submit "Start Game", class: 'btn btn-primary' %>
  <% end %>
</div>
<div class="container mt-4">
  <h1 class="mb-4">Game Info</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Player 1</th>
        <th scope="col">player 2</th>
        <th scope="col">Winner</th>
        <th scope="col">Date</th>
      </tr>
    </thead>
    <tbody>
      <% Game.where(status: 1).order(created_at: :desc).each do |game| %>
        <tr>
          <td><%= game.player_1 %></td>
          <td><%= game.player_2 %></td>
          <td><%= game.winner %></td>
          <td><%= game.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
